use strict;
use warnings;

my $name;
if ( $0 =~ /lib_lease_manager-(\w+)\.run/ ) {
    $name = $1;
}
else {
    die "$0: invalid .run file name";
}

my @args = ( "./lib_lease_manager.pl", $name, "--pid" );
foreach my $a ( @ARGV ) {
    push( @args, $a );
}
my $status = system( @args );
if ( $status < 0 ) {
    die "Failed to execute " . join(" ", @args) . ": $?";
}
exit( $? >> 8 );
