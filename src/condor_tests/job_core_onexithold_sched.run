use CondorTest;

$testdesc =  'Condor ON_EXIT_HOLD policy test - scheduler U';
$testname = "job_core_onexithold_sched";

my $nostatus = CondorTest::verbose_system("./job_core_onexithold-false_sched.pl");
my $willstatus = CondorTest::verbose_system("./job_core_onexithold-true_sched.pl");

if($nostatus != 0)
{
	CondorTest::debug("ON_EXIT_HOLD: failed no trigger test\n",1);
}

if($willstatus != 0)
{
	CondorTest::debug("ON_EXIT_HOLD: failed trigger test\n",1);
}

if(($willstatus != 0) || ($nostatus != 0))
{
	die "Failed one ON_EXIT_HOLD test\n";
}


