use CondorTest;
use CondorUtils;
use Check::SimpleJob;

$testname = "job_core_perremove_sched";

##
## Status Values
##
sub IDLE{1};
sub HELD{5};
sub RUNNING{2};

# where am I running
$currenthost = CondorTest::getFqdnHost();

print scalar localtime() . "\n";

my $variation = "perremovefalse";

my $firstappend_condor_config = '
    DAEMON_LIST = MASTER,SCHEDD,COLLECTOR,NEGOTIATOR,STARTD
	PERIODIC_EXPR_interval = 30
    NUM_CPUS = 2
    NEGOTIATOR_INTERVAL = 5
';

$configfile = CondorTest::CreateLocalConfig($firstappend_condor_config,"perremovesched");
print "local config file:$configfile\n";

CondorTest::StartCondorWithParams(
    condor_name => "perremovesched",
    fresh_local => "TRUE",
    condorlocalsrc => "$configfile",
);


my %info;
my $cluster;


$executed = sub
{
	%info = @_;
	$cluster = $info{"cluster"};

	CondorTest::debug("Good. for periodic_remove cluster $cluster must run first\n",1);
};

$success = sub
{
	my %info = @_;
	my $cluster = $info{"cluster"};

	CondorTest::debug("Good, job should complete trivially\n",1);
};

$aborted = sub {
	CondorTest::debug("Abort event expected from periodic_remove policy evaluating to true\n",1);
	CondorTest::debug("Policy test worked.\n",1);
};

$evictedwithoutcheckpoint = sub {
};

my $falsepolicy = '
	periodic_remove = (time() - QDate) < (0 )
';

my $truepolicy = '
	periodic_remove = (time() - QDate) > 2
';

if(is_windows()) {
	# FALSE
	SimpleJob::RunCheck(
		runthis=>"sleep.exe",
		universe=>"scheduler",
		append_submit_commands=>$falsepolicy,
		duration=>"6s",
	    on_execute=>$executed,
	    on_success=>$success,
	);


	$variation = "perreleasetrue";

	# TRUE
	SimpleJob::RunCheck(
		runthis=>"sleep.exe",
		universe=>"scheduler",
		append_submit_commands=>$truepolicy,
		duration=>"60s",
	    on_execute=>$executed,
	    on_abort=>$aborted,
		on_evictedwithoutcheckpoint=>$evictedwithoutcheckpoint,
	);
} else {
	# FALSE
	SimpleJob::RunCheck(
		universe=>"scheduler",
		append_submit_commands=>$falsepolicy,
		duration=>6,
	    on_execute=>$executed,
	    on_success=>$success,
	);


	$variation = "perreleasetrue";

	# TRUE
	SimpleJob::RunCheck(
		universe=>"scheduler",
		append_submit_commands=>$truepolicy,
		duration=>60,
	    on_execute=>$executed,
	    on_abort=>$aborted,
		on_evictedwithoutcheckpoint=>$evictedwithoutcheckpoint,
	);
}

CondorTest::EndTest();
print scalar localtime() . "\n";
my $result = 0;

if( $result != 0 )
{
    exit(1);
}

CondorTest::debug("$testname SUCCESS\n",1);
exit(0);
