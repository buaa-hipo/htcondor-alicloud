use CondorTest;

$cmd = 'job_rsc_fstream_std.cmd';
$testdesc =  'Fstream Test';
$testname = "job_rsc_fstream_std";

$input = 'x_data.in';
$other_out = 'job_rsc_fstream_std.output';

@expected_output = 
( "To determine success of test, do a diff on $input and", 
  "$other_out.  There should be no difference." );

$OutputTest = sub
{
    my %info = @_;

   CondorTest::CompareText( $info{"output"}, \@expected_output ) ||
	die "$testname: FAILURE (STDOUT doesn't match expected output)\n";

    system("cmp $input $other_out") == 0 || 
	die "$testname: FAILURE ($other_output doesn't match $input)\n";

    -z $info{"error"} || 
	die "$testname: FAILURE (STDERR contains data)\n";
};

CondorTest::RegisterExitedSuccess( $testname, $OutputTest );

if( CondorTest::RunTest($testname, $cmd, 0) ) {
    CondorTest::debug("$testname: SUCCESS\n",1);
    exit(0);
} else {
    die "$testname: CondorTest::RunTest() failed\n";
}


