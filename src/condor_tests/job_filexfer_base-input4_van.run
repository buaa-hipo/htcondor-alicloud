use CondorTest;

my $testdesc =  'Jobs run with imput when transfer_input = false - vanilla U';
my $testname = "job_filexfer_base-input4_van";
my $pid = $$;

print "Test: $testname has pid $pid\n";
my $sanestatus = CondorTest::verbose_system("./x_sanitysubmit.pl $pid");
my $teststatus = CondorTest::verbose_system("./job_filexfer_base-input4_van.pl");

if($sanestatus != 0)
{
        CondorTest::debug("job_filexfer_base-input4_van failed sanity submittest\n",1);
}

if($teststatus != 0)
{
        CondorTest::debug("job_filexfer_base-input4_van failed actual test\n",1);
}

if(($teststatus == 0) && ($sanestatus == 0))
{
        CondorTest::debug("Passed job_filexfer_base-input4_van\n",1);
} else {
		die "Failed job_filexfer_base-input4_van\n";
}

