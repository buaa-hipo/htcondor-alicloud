use CondorUtils;
use Cwd;

my @got;
$testdesc =  'lib_auth_config - runs tests of IpVerify';
$testname = "lib_auth_config";
if(is_windows()) {
	$test = "condor_test_auth.exe";
} else {
	$test = "condor_test_auth";
}
$inputdir = "lib_auth_config_tests";

@inputfiles = ();
$topdir = getcwd();

print scalar localtime() . "\n";

if(!(-f $test)) {
	print "Failure from lack of testing program <$test>\n";
	exit(1);
}

# get input list by reading directory in perl
my $fullpath = "";

chdir("$inputdir");
opendir(GD,".") or die "failed to open .:$!\n";
foreach my $subfile (readdir GD) {
	next if $subfile =~ /^\.\.?$/;
	if($subfile =~ /_input/) {
		#print "saving:$subfile:\n";
		$fullpath = "";
		if(is_windows()) {
			$fullpath = "$inputdir" . "\\" . "$subfile";
		} else {
			$fullpath = "$inputdir" . "/$subfile";
		}
		push @inputfiles,$fullpath;
	}
}
#foreach my $input ( @inputfiles ) {
	#print "input:$input\n"
#}

chdir("$topdir");
#foreach $input ( glob($inputdir . "/test_auth_*_input") ) {
foreach my $input ( @inputfiles ) {
  my $config = $input;
  $config =~ s/_input/_config/;

  $ENV{CONDOR_CONFIG} = "$config";

  print "\n";
  print "Running authorization test $input with the following configuration:\n";
  print "########## BEGIN CONFIGURATION #############\n";

  open( config_fp, "< $config" ) or die "Can't open $config: $!";
  while( <config_fp> ) {
    print;
  }
  close config_fp;

  print "########### END CONFIGURATION ##############\n";
  print "\n";
  print "########## BEGIN TEST #############\n";

  open( input_pipe, "|$test -debug 2>&1");
  open( input_fp, "<$input");
  while ( <input_fp> ) {
      print input_pipe $_;
  }
  close input_fp;
  close input_pipe;
  my $result=$?;
  print "########### END TEST ##############\n";

  if ( $result != 0 ) {
    print "Authorization test Failure: condor_test_auth < $input\n";
    exit(1);
  }
}

print "\n";
print "Authorization test Success\n";

exit(0);
