#!/bin/sh

# this package now sometimes depends on other packages being built, this
# brings in the other values I need to determine if the other things were
# built properly.
. $EXTERNALS_CONFIG

cd $PACKAGE_BUILD_DIR/$PACKAGE_NAME

echo "Applying enable-static-nss patch..."
cat $PACKAGE_BUILD_DIR/enable-static-nss.patch | patch -p1
if [ $? -ne 0 ]
then
        echo "nss patch failed"
        exit 1
fi

echo "Applying disable-nscd patch..."
cat $PACKAGE_BUILD_DIR/disable-nscd.patch | patch -p1
if [ $? -ne 0 ]
then
        echo "nscd patch failed"
        exit 1
fi

kernel_version=2.6.9

# autoconf

mkdir $PACKAGE_BUILD_DIR/${PACKAGE_NAME}-build
cd $PACKAGE_BUILD_DIR/${PACKAGE_NAME}-build

# configure the package.... NOTE edit both lines!
echo $PACKAGE_BUILD_DIR/$PACKAGE_NAME/configure --prefix=$PACKAGE_INSTALL_DIR --enable-add-ons=nptl,rtkaio,c_stubs,libidn --without-cvs --enable-kernel=$kernel_version --with-headers=$HOME/junk/glibc-2.5-20061008T1257/override_headers:/usr/include --enable-bind-now --with-tls --with-__thread --build i486-redhat-linux --host i486-redhat-linux --disable-profile --enable-static-nss

$PACKAGE_BUILD_DIR/$PACKAGE_NAME/configure --prefix=$PACKAGE_INSTALL_DIR --enable-add-ons=nptl,rtkaio,c_stubs,libidn --without-cvs --enable-kernel=$kernel_version --with-headers=$HOME/junk/glibc-2.5-20061008T1257/override_headers:/usr/include --enable-bind-now --with-tls --with-__thread --build i486-redhat-linux --host i486-redhat-linux --disable-profile --enable-static-nss


if [ $? -ne 0 ]
then
	echo "configure failed"
	exit 1
fi

# XXX fix for opteron build when it happens.
make -j2 -r 'CFLAGS=-march=i386 -mtune=generic -mno-tls-direct-seg-refs -DNDEBUG=1 -g -O3 ' PARALLELMFLAGS=-s

if [ $? -ne 0 ]
then
	echo "make failed"
	exit 1
fi

make install
if [ $? -ne 0 ]
then
	echo "install failed"
	exit 1
fi
